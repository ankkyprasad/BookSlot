<div class="max-5-xl mx-auto pb-8 rounded shadow-xl border my-8 w-4/5">
    <div class="px-6 py-10 rounded-t-xl bg-gray-50">
        <h1 class="text-3xl font-extrabold text-center">
            <%= @user.name %>'s Booking Page
        </h1>
        <p class="text-center text-gray-600 mt-2">Book your prefered time slog using the booking options below </p>
    </div>
    <div class="grid grid-cols-3 gap-6 px-8 pt-8">
        <% @user.events.each do |event| %>
            <%= render 'users/event', event: event %>
        <% end %>
    </div>
</div>