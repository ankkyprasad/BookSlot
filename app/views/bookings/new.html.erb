<div class="flex justify-center py-4">
  <div class="w-3/6 bg-white border border-gray-200 rounded-lg shadow flex flex-col items-center">
    <div class="border-b w-full flex justify-center">
      <div class="flex justify-between w-5/6 m-4 items-center">
      <div>
        <h1 class="text-xl font-medium text-gray-900">Book <%= @event.name %> Event</h1>
        <p class="text-sm text-gray-600">by: <%= @event.user.name %></p>
      </div>
        <%= link_to "Go Back", :back, class: "inline-flex items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300" %>
      </div>
    </div>
    <div class="w-3/5 mb-6">
      <%= render "form", booking: @booking %>
    </div>
  </div>
</div>
