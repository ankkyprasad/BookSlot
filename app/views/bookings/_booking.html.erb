<div class="flex flex-col" id="<%= dom_id booking %>">
  <div
    class="relative flex flex-col items-center bg-white bg-clip-border shadow-3xl shadow-shadow-500 p-3"
  >
    <div class="mt-2 mb-8 w-full">
      <h4 class=" text-xl font-bold text-navy-700">Description</h4>
      <div class="mt-2 text-base text-gray-600">
        <%= @event.description %>
      </div>
    </div>
    <div class="grid grid-cols-2 gap-4 w-full">
      <div
        class="flex flex-col items-start justify-center rounded-2xl bg-gray-50 bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500"
      >
        <p class="text-sm text-gray-600">First name</p>
        <p class="text-base font-medium text-navy-700">
          <%= booking.first_name %>
        </p>
      </div>

      <div
        class="flex flex-col justify-center rounded-2xl bg-gray-50 bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500"
      >
        <p class="text-sm text-gray-600">Last name</p>
        <p class="text-base font-medium text-navy-700">
          <%= booking.last_name %>
        </p>
      </div>

      <div
        class="flex flex-col items-start justify-center rounded-2xl bg-gray-50 bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500"
      >
        <p class="text-sm text-gray-600">Email</p>
        <p class="text-base font-medium text-navy-700">
          <%= booking.email %>
        </p>
      </div>

      <div
        class="flex flex-col justify-center rounded-2xl bg-gray-50 bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500"
      >
        <p class="text-sm text-gray-600">Start at</p>
        <p class="text-base font-medium text-navy-700">
          <%= booking.start_at %>
        </p>
      </div>

      <div
        class="flex flex-col items-start justify-center rounded-2xl bg-gray-50 bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500"
      >
        <p class="text-sm text-gray-600">Email Verified</p>
        <p class="text-base font-medium text-navy-700">
          <%= booking.email_verified %>
        </p>
      </div>

      <div
        class="flex flex-col justify-center rounded-2xl bg-gray-50 bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500"
      >
        <p class="text-sm text-gray-600">Status</p>
        <p class="text-base font-medium text-navy-700">
          <%= booking.status %>
        </p>
      </div>

      <div
        class="flex flex-col items-start justify-center rounded-2xl bg-gray-50 bg-clip-border px-3 py-4 shadow-3xl shadow-shadow-500"
      >
        <p class="text-sm text-gray-600">Event By</p>
        <p class="text-base font-medium text-navy-700">
          <%= @event.user.name %>
        </p>
      </div>
    </div>
  </div>
</div>
